<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="90"
    tools:context=".DetailedCompanyProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:gravity="center"
        android:elevation="0dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/appbar_brid_1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/display_confirmed_co_image_1"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/africa2"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorAccent"
            android:layout_weight="40"/>

        <TextView
            android:id="@+id/display_confirmed_co_name_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Company Name"
            android:textAlignment="center"
            android:textColor="@color/whiteColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/display_confirmed_co_industry_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Industry"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="@color/whiteColor"
            android:textSize="16sp" />
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/colorPrimaryDark"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:id="@+id/android_tab_layout_1"
        app:tabTextColor="@color/whiteColor"
        app:tabIndicatorColor="@color/colorPrimary"/>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:id="@+id/android_viewpager_1">

    </android.support.v4.view.ViewPager>
</LinearLayout>